<Page x:Class="SIMS_HCI_Project.WPF.Views.Guest2Views.ComplexRequestsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS_HCI_Project.WPF.Views.Guest2Views"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="1080"
      Title="ComplexRequestsView">

    <Page.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/Guest2Styles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid Background="#FF686890">
        <Label Content="My complex requests:" FontSize="15" Foreground="Beige" HorizontalAlignment="Center" Margin="0,1,0,0" VerticalAlignment="Top"/>

        <Frame x:Name="CreateRequestFrame" NavigationUIVisibility="Hidden" Margin="0,195,0,0"/>
        <Button x:Name="createNewRequest" Style="{StaticResource Guest2BtnGradientOrange}" Content="CREATE NEW COMPLEX REQUEST" Command="{Binding DataContext.CreateRequest, RelativeSource={RelativeSource AncestorType={x:Type Page}}}" 
            HorizontalAlignment="Center" Margin="10,170,0,0" VerticalAlignment="Top" Height="25"/>
    </Grid>
</Page>
