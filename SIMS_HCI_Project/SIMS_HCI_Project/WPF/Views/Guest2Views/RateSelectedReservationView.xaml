<Page x:Class="SIMS_HCI_Project.WPF.Views.Guest2Views.RateSelectedReservationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:converters="clr-namespace:SIMS_HCI_Project.WPF.Converters"

        xmlns:local="clr-namespace:SIMS_HCI_Project.WPF.Views.Guest2Views"
        mc:Ignorable="d"
        Title="RateSelectedReservationView" Height="259" Width="1080">

    <Page.Resources>
        <converters:RatingConverter x:Key="RatingConverter"/>

        <!--ResourceDictionary x:Key="aaa">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/Guest2Styles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary-->

        <Style TargetType="Label" >
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0 ,0 ,0 ,0"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <Grid >

        <Border BorderBrush="Orange" BorderThickness="2"  CornerRadius="15" />

        <Label Content="OverallExperience" Margin="10,37,946,193" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <!--<TextBox x:Name="owerall" Text="{Binding Path= TourRating.OverallExperience, UpdateSourceTrigger=PropertyChanged}" Margin="218,37,657,194" BorderThickness="0,0,0,0" />-->
        <StackPanel Orientation="Horizontal" Margin="218,37,657,194">
            <RadioButton Content="1" IsChecked="{Binding TourRating.OverallExperience, ConverterParameter=1, Converter={StaticResource RatingConverter}}" Foreground="White" />
            <Label Content="   " Width="18"/>
            <RadioButton Content="2" IsChecked="{Binding TourRating.OverallExperience, ConverterParameter=2, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>
            <RadioButton Content="3" IsChecked="{Binding TourRating.OverallExperience, ConverterParameter=3, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>
            <RadioButton Content="4" IsChecked="{Binding TourRating.OverallExperience, ConverterParameter=4, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>
            <RadioButton Content="5" IsChecked="{Binding TourRating.OverallExperience, ConverterParameter=5, Converter={StaticResource RatingConverter}}" Width="32" >

            </RadioButton>
            <!--<Border BorderBrush="White" BorderThickness="1"/>-->
        </StackPanel>

        <Label Content="Organisation" Margin="10,66,940,155" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <!--TextBox x:Name="Organisation" Text="{Binding Path= TourRating.Organisation, UpdateSourceTrigger=PropertyChanged}" Margin="218,70,657,155" BorderThickness="0,0,0,0"/-->
        <StackPanel Orientation="Horizontal" Margin="218,70,657,155">
            <RadioButton Content="1" IsChecked="{Binding TourRating.Organisation, ConverterParameter=1, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="2" IsChecked="{Binding TourRating.Organisation, ConverterParameter=2, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="3" IsChecked="{Binding TourRating.Organisation, ConverterParameter=3, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="4" IsChecked="{Binding TourRating.Organisation, ConverterParameter=4, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="5" IsChecked="{Binding TourRating.Organisation, ConverterParameter=5, Converter={StaticResource RatingConverter}}" />
        </StackPanel>


        <Label Content="Interestingness" Margin="10,109,931,115" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <!--<TextBox x:Name="Interestingness" Text="{Binding Path= TourRating.Interestingness, UpdateSourceTrigger=PropertyChanged}" Margin="218,109,657,115"  BorderThickness="0,0,0,0"/>-->
        <StackPanel Orientation="Horizontal" Margin="218,109,657,115">
            <RadioButton Content="1" IsChecked="{Binding TourRating.Interestingness, ConverterParameter=1, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="2" IsChecked="{Binding TourRating.Interestingness, ConverterParameter=2, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="3" IsChecked="{Binding TourRating.Interestingness, ConverterParameter=3, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="4" IsChecked="{Binding TourRating.Interestingness, ConverterParameter=4, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="5" IsChecked="{Binding TourRating.Interestingness, ConverterParameter=5, Converter={StaticResource RatingConverter}}" />
        </StackPanel>

        <Label Content="GuidesKnowledge" Margin="10,153,920,81" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <!--<TextBox x:Name="GuidesKnowledge" Text="{Binding Path= TourRating.GuidesKnowledge, UpdateSourceTrigger=PropertyChanged}" Margin="218,149,657,77"  BorderThickness="0,0,0,0"/>-->
        <StackPanel Orientation="Horizontal" Margin="218,149,657,77">
            <RadioButton Content="1" IsChecked="{Binding TourRating.GuidesKnowledge, ConverterParameter=1, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="2" IsChecked="{Binding TourRating.GuidesKnowledge, ConverterParameter=2, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="3" IsChecked="{Binding TourRating.GuidesKnowledge, ConverterParameter=3, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="4" IsChecked="{Binding TourRating.GuidesKnowledge, ConverterParameter=4, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="5" IsChecked="{Binding TourRating.GuidesKnowledge, ConverterParameter=5, Converter={StaticResource RatingConverter}}" />
        </StackPanel>

        <Label Content="GuidesLanguage" Margin="10,187,931,47" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <!--<TextBox x:Name="GuidesLanguage" Text="{Binding Path= TourRating.GuidesLanguage, UpdateSourceTrigger=PropertyChanged}" Margin="218,187,657,47" BorderThickness="0,0,0,0"/>-->
        <StackPanel Orientation="Horizontal" Margin="218,187,657,47" >
            <RadioButton Content="1" IsChecked="{Binding TourRating.GuidesLanguage, ConverterParameter=1, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="2" IsChecked="{Binding TourRating.GuidesLanguage, ConverterParameter=2, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="3" IsChecked="{Binding TourRating.GuidesLanguage, ConverterParameter=3, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="4" IsChecked="{Binding TourRating.GuidesLanguage, ConverterParameter=4, Converter={StaticResource RatingConverter}}" />
            <Label Content="   " Width="18"/>

            <RadioButton Content="5" IsChecked="{Binding TourRating.GuidesLanguage, ConverterParameter=5, Converter={StaticResource RatingConverter}}" />
        </StackPanel>

        <Label Content="Additional comment" Margin="507,47,450,187" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <TextBox x:Name="Comment" Text="{Binding TourRating.Comment, UpdateSourceTrigger=PropertyChanged}" Margin="626,37,40,155" BorderThickness="0,0,0,0" />

        <Label Content="Images URL" Margin="520,109,410,125" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <TextBox x:Name="Images" Text="{Binding ImageURL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="626,109,117,129" BorderThickness="0,0,0,0"/>
        <Button Command="{Binding AddImageCommand}" Background="Orange" HorizontalAlignment="Left" Margin="968,109,0,0" VerticalAlignment="Top" Height="21" Width="35" BorderThickness="0,0,0,0">
            <Button.ToolTip>Add image URL to list</Button.ToolTip> +
        </Button>
        <ListBox ItemsSource="{Binding Images, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="626,130,117,77"/>

        <Button Content="CONFIRM" Background="Orange" Command="{Binding ConfirmRatingCommand}" HorizontalAlignment="Left" Margin="626,200,0,0" VerticalAlignment="Top" Height="36" Width="150"/>
        <Button Content="QUIT" Background="Orange" Command="{Binding QuitRatingCommand}" HorizontalAlignment="Left" Margin="813,200,0,0" VerticalAlignment="Top" Height="36" Width="150"/>


        <TextBlock Text="{Binding SelectedTourInfo}"  Foreground="Orange" FontWeight="Medium" Margin="10,5,10,227" HorizontalAlignment="Center" FontSize="14"/>








    </Grid>
</Page>
